<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_weather_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/widget_weather_condition_temp_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/widget_weather_condition_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/widget_weather_image_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_weather_temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/widget_weather_temp_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/widget_weather_temp_low_high_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_weather_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

            <TextView
                android:id="@+id/widget_weather_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_weather_precipitation_wind_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/widget_weather_precipitation_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/widget_weather_precipitation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/widget_label_bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="1dp" />

        <ImageView android:id="@+id/widget_weather_wind_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/widget_weather_wind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/widget_label_bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_weather_temps_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_weather_temp_morning_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/morning_title"
                style="@style/widget_label_bold" />

            <TextView
                android:id="@+id/widget_weather_temp_morning_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_weather_temp_day_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_title"
                style="@style/widget_label_bold" />

            <TextView
                android:id="@+id/widget_weather_temp_day_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_weather_temp_evening_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evening_title"
                style="@style/widget_label_bold" />

            <TextView
                android:id="@+id/widget_weather_temp_evening_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_weather_temp_night_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/night_title"
                style="@style/widget_label_bold" />

            <TextView
                android:id="@+id/widget_weather_temp_night_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/widget_label_bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_weather_timestamp_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <ImageView android:id="@+id/widget_weather_timestamp_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/widget_weather_timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            style="@style/widget_label_bold"
            android:textSize="10sp"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>
