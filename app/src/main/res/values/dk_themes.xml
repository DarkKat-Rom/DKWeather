<resources>

    <!-- App splash theme -->
    <style name="AppSplashTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    </style>

    <!-- App theme light -->
    <style name="AppThemeLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>
        <item name="dividerColor">@color/divider_light_black</item>
        <item name="checkableTextColor">@color/checkable_text_color_light</item>
    </style>

    <!-- App theme dark -->
    <style name="AppThemeDark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>
        <item name="dividerColor">@color/divider_dark_white</item>
        <item name="checkableTextColor">@color/checkable_text_color_dark</item>
    </style>

    <!-- App theme DarkKat -->
    <style name="AppThemeDarkKat" parent="@style/AppThemeDark">
        <item name="android:colorBackground">@color/theme_background_dark</item>
        <item name="colorBackgroundFloating">@color/theme_background_floating_dark</item>
        <!-- Copy the colorBackgroundFloating theme attributes to the framework -->
        <item name="android:colorBackgroundFloating">?attr/colorBackgroundFloating</item>
    </style>

    <style name="AppThemeLight.LightActionBar">
        <item name="colorPrimary">@color/theme_light_primary</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Internal.LightActionBar</item>
    </style>

    <style name="AppThemeLight.LightStatusBar" parent="@style/AppThemeLight.LightActionBar">
        <item name="colorPrimaryDark">@color/theme_light_primary_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeLight.LightNavigationBar">
        <item name="android:navigationBarColor">@color/theme_light_primary_dark</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeLight.LightActionBar.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/theme_light_primary_dark</item>
    </style>

    <style name="AppThemeLight.LightStatusBar.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/theme_light_primary_dark</item>
    </style>

    <style name="AppThemeDark.LightActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.Internal.LightActionBar</item>
    </style>

    <style name="AppThemeDark.LightStatusBar" parent="@style/AppThemeDark.LightActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeDark.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeDark.LightActionBar.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeDark.LightStatusBar.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeDarkKat.LightActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.Internal.LightActionBar</item>
    </style>

    <style name="AppThemeDarkKat.LightStatusBar" parent="@style/AppThemeDarkKat.LightActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeDarkKat.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeDarkKat.LightActionBar.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppThemeDarkKat.LightStatusBar.LightNavigationBar">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="ThemeOverlay.Internal.LightActionBar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
    </style>
</resources>
